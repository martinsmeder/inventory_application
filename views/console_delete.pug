extends layout

block content

  h1 #{title}: #{console_model.name}
  p= console_model.description

  if console_games.length

    p #[strong Delete the following games before attempting to delete this console.]
      h4 Games
      dl
        each game in console_games
          dt
            a(href=game.url) #{game.name}
          dd #{game.description}

  else
    p Do you really want to delete this Console?

    form(method='POST')
      input(type='hidden', name='console_modelid', value=console_model._id )

      button(type='submit') Delete
